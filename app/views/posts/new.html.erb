<%= form_for @post do |f| %>
  <fieldset>
    <%= f.label :title %>:
    <%= f.text_field :title %><br />
  </fieldset>
  <fieldset>
    <%= f.label :link %>:
    <%= f.text_field :link %><br />
  </fieldset>
  <fieldset>
    <%= f.label :body %>:
