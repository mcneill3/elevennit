<%= form_for @post do |f| %>

<!-- Do no allow the title to be edited -->
  <% if f.object.new_record? %>
  <fieldset>
    <%= f.label :title %>:
    <%= f.text_field :title %><br />
  </fieldset>
  <% end %>

  <fieldset>
    <% if f.object.link? %>
        <%= f.label :link %>:
        <%= f.text_field :link %><br />
    <% elsif f.object.text? %>
        <%= f.label :body %>:
        <%= f.text_area :body %><br />
    <% end %>
  </fieldset>

  <fieldset>
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: 'Select a category' %>
  </fieldset>

    <%= f.hidden_field :post_type %>
    <%= f.submit class: 'btn btn-default' %>
  <% end %>
